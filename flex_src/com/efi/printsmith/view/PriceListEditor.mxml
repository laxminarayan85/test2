	private function fillArray():void {
		var PaperMethod1:Object = new Object;
		PaperMethod1.id = "1";
		PaperMethod1.name = "Use ordered quantity"
		PaperPriceMethodArray.addItem(PaperMethod1);

		var PaperMethod2:Object = new Object;
