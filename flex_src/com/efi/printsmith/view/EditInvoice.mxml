						shipv=new ShippingMethod();
						shipv.name=ship_via_combo.text;
						shippingMethodDataService.addUpdate(shipv);
						invoice.shippingMethod=shipv;
					}
					else
					{
						ship_via_combo.selectedItem=item;
					}
				}
			}

