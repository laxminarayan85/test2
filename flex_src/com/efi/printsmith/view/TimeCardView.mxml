	}
	
	private function setSpecificPerNum(event:Event):void {
		specifyPeriod = event.currentTarget.selectedItem.periodNumber;
		timecard = null;
		selectedIndex = -1;
		timecardEmployeeArray = new ArrayCollection();
		billableString = "00:00";
		getTimeCards();
	}


