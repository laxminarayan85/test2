			import mx.collections.ArrayCollection;
			import com.efi.printsmith.data.PreferencesEstimating;
			[Bindable] public var preferencesEstimating:PreferencesEstimating;
			
			[Bindable] public var runToFinishGrainArray:ArrayCollection = new ArrayCollection();
			
			private function setAlphaForGrip(preferencesEstimating:PreferencesEstimating,strValue:String):Number{
				if(preferencesEstimating){
					if(preferencesEstimating.gripLocation==strValue)
						return 0.4;
				}
				return 1;
			}
			
			private function setAlphaForFolio(preferencesEstimating:PreferencesEstimating,strValue:String):Number{
				if(preferencesEstimating){
					if(preferencesEstimating.folioLocation==strValue)
						return 0.4;
				}
				return 1;
			}
			
			private function setAlphaAfterChange(compName:String):void{
				if(compName=="grip") {
					if(preferencesEstimating.gripLocation=="Top") {
						topGrip.alpha=0.4;
						leftGrip.alpha=1;
					} else {
						topGrip.alpha=1;
						leftGrip.alpha=0.4;
					}
				} else {
					if(preferencesEstimating.folioLocation=="Top") {
						topFolio.alpha=0.4;
						leftFolio.alpha=1;
					} else {
						topFolio.alpha=1;
						leftFolio.alpha=0.4;
					}
				}
			}
		]]>
	</mx:Script>
	
