										label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'extPaperCalcCmd.BackTrimParent')}"
										dataHolder="{preferencesEstimating}" variableName="backTrimParent" customText="{preferencesEstimating.backTrimParent}"
