<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:components="com.efi.printsmith.common.components.*">
	<mx:Script>
		<![CDATA[
			import com.efi.printsmith.data.PreferencesEstimating;
			[Bindable] public var preferencesEstimating:PreferencesEstimating = new PreferencesEstimating();
		]]>
	</mx:Script>
	
	<mx:VBox width="100%" height="100%">
	
		<mx:Label
			text="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'genericPrefCmd.EstimatorBehavior')}"
			textAlign="center" width="100%"/>
			
		<mx:HRule width="100%"/>
		
		<mx:HBox width="100%" height="100%">
		
			<mx:Spacer width="30"/>
			
			<mx:VBox width="100%" height="100%">
	
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.Closesourcedocumenta')}"
					dataHolder="{preferencesEstimating}" variableName="closeAfterCopy" customText="{preferencesEstimating.closeAfterCopy}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'pricePrefCmd.EnterStockCostinEsti')}"
					dataHolder="{preferencesEstimating}" variableName="stockCostInEstimator" customText="{preferencesEstimating.stockCostInEstimator}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'pricePrefCmd.CanchangeaddressonAL')}"
					dataHolder="{preferencesEstimating}" variableName="canChangeAddress" customText="{preferencesEstimating.canChangeAddress}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'pricePrefCmd.AutoshowPaperCalcula')}"
					dataHolder="{preferencesEstimating}" variableName="showPaperCalculator" customText="{preferencesEstimating.showPaperCalculator}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.AlwaysuseStocksParen')}"
					dataHolder="{preferencesEstimating}" variableName="useStockParentSize" customText="{preferencesEstimating.useStockParentSize}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.CalculateReorderdate')}"
					dataHolder="{preferencesEstimating}" variableName="calculateReOrderDate" customText="{preferencesEstimating.calculateReOrderDate}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.Validatesalesrep')}"
					dataHolder="{preferencesEstimating}" variableName="validateSalesRep" customText="{preferencesEstimating.validateSalesRep}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.LeaveFoldedsizeempty')}"
					dataHolder="{preferencesEstimating}" variableName="leaveFoldedSizeEmpty" customText="{preferencesEstimating.leaveFoldedSizeEmpty}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.DonotperformCostingd')}"
					dataHolder="{preferencesEstimating}" variableName="doNotCostDuringPost" customText="{preferencesEstimating.doNotCostDuringPost}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.AutoshowChargesonnew')}"
					dataHolder="{preferencesEstimating}" variableName="autoShowCharges" customText="{preferencesEstimating.autoShowCharges}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.Neverusepresetpresso')}"
					dataHolder="{preferencesEstimating}" variableName="neverUsePresetPressOnStockChanges" customText="{preferencesEstimating.neverUsePresetPressOnStockChanges}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'pricePrefCmd.Addfixedwasteforeachpass')}"
					dataHolder="{preferencesEstimating}" variableName="addFixedWasteForEachPass" customText="{preferencesEstimating.addFixedWasteForEachPass}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'pricePrefCmd.Addfixedwasteforeachcolor')}"
					dataHolder="{preferencesEstimating}" variableName="addFixedWasteForEachColor" customText="{preferencesEstimating.addFixedWasteForEachColor}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'pricePrefCmd.CalculateINKbyImpres')}"
					dataHolder="{preferencesEstimating}" variableName="calculateInkbyImpressions" customText="{preferencesEstimating.calculateInkbyImpressions}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<components:CustomCheckBoxComponent
					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'pricePrefCmd.UsetheHistorytitlefo')}"
					dataHolder="{preferencesEstimating}" variableName="useHistoryTitleforNewTitle" customText="{preferencesEstimating.useHistoryTitleforNewTitle}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
