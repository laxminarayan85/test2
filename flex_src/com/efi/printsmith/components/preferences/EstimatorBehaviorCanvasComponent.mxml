					label="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'pricePrefCmd.HistoryView')}"
					dataHolder="{preferencesEstimating}" variableName="defaultHistoryView" customText="{preferencesEstimating.defaultHistoryView}"
					selectedValue="true" deSelectedValue="false" defaultValue="false"/>
					
				<mx:HBox width="100%">
					
					<mx:Label width="150"
						text="{resourceManager.getString(Snowmass.RESOURCE_BUNDLE, 'otherPrefCmd.Normalduedatedays')}"
						textAlign="right" />
						
					<components:CustomNumericTextInputComponent width="70" 
						dataHolder="{preferencesEstimating}" variableName="normalDueDateDays" customText="{preferencesEstimating.normalDueDateDays}"
						precision="0" rounding="nearest" isInteger="true"/>
					
				</mx:HBox>
					
			</mx:VBox>
			
		</mx:HBox>
		
	</mx:VBox>
		
</mx:Canvas>