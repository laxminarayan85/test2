			private function doDeleteCharge():void
			{
				if (invoice_charge_datagrid.selectedItem != null)
				{
					var charge:Charge=invoice_charge_datagrid.selectedItem as Charge;
					var index:int=this.job.charges.getItemIndex(charge);
