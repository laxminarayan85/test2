<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
				xmlns:vo="com.efi.vo.*"
				width="386"
				height="522"
				defaultButton="{okButton}"
				showCloseButton="true"
				close="PopUpManager.removePopUp(this);"
				title="Debug"
				xmlns:text="flash.text.*">

	<mx:RemoteObject id="dataService"
					 destination="dataService">
		<mx:method name="addUpdate"
				   fault="handleFault(event)"
				   result="handleSaveResult(event)"/>
	</mx:RemoteObject>
	<mx:Script>

		<![CDATA[
			import com.efi.vo.SalesCategory;
			import com.efi.vo.PricingMethod;
			import mx.collections.ArrayCollection;
			import com.efi.vo.ChargeCost;
			import com.efi.vo.enums.ChargeCostMethod;

			import mx.managers.PopUpManager;
			import mx.controls.Alert;
			import mx.containers.Canvas;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.events.FaultEvent;
			import mx.events.ValidationResultEvent;
			import mx.validators.Validator;
			import mx.messaging.messages.AsyncMessage;
			import mx.messaging.messages.IMessage;

			private var salesCategoryNames:Array = ["Print", "Bindery", "PrePress", "HS Copy", "Color Copy", "Merch", "Mailing", "Misc...",
													"Typesetting", "Graphics", "Large Format", "Outside Svcs", "Disc-Markups", "Postage", "Interest", "Shipping"];
			private var pricingMethodNames:Array = ["Printing", "Roll-Fed", "B&W", "Color", "Large Format", "Blank", "List", "Charges Only", "Outside Services",
													"Merchandise", "Lines & Inches", "Mailing"];
																							
			private function handleFault(ev:FaultEvent):void
			{
				
			}
			
			private function handleSaveResult(ev:Event):void
			{
				
			}
			
			private function doOK():void
			{
				PopUpManager.removePopUp(this);
			}
			
			private function doPopulateEstimators():void {
				
			}
			
			private function doPopulateSalesCategories():void {
				var salesCategory:SalesCategory = new SalesCategory();
				var i:int;
				
				for (i=0; i<salesCategoryNames.length; i++) {
					salesCategory.name = salesCategoryNames[i];
					salesCategory.id = 0;
					dataService.addUpdate(salesCategory);
				}				
			}
			
			private function doPopulatePricingMethods():void {
				var pricingMethod:PricingMethod = new PricingMethod();
				var i:int;
				
				for (i=0; i<pricingMethodNames.length; i++) {
					pricingMethod.title = pricingMethodNames[i];
					pricingMethod.id = 0;
					dataService.addUpdate(pricingMethod);
				}								
			}
		]]>
	</mx:Script>

	<mx:Canvas width="100%"
			   height="100%">
		<mx:Button x="10"
				   y="10"
				   label="Populate Pricing Methods"
				   click="doPopulatePricingMethods();" width="174"/>
		<mx:Button x="10"
				   y="40"
				   label="Populate Sales Categories"
				   click="doPopulateSalesCategories();"/>
	</mx:Canvas>

	<mx:ControlBar horizontalAlign="center">
		<mx:Button label="OK"
				   id="okButton"
				   enabled="true"
				   click="doOK();"/>
		<mx:Button label="Cancel"
				   click="PopUpManager.removePopUp(this);"/>
	</mx:ControlBar>

</mx:TitleWindow>
