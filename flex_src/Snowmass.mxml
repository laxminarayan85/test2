		private function getLocalizedMenuLabel(val:String):String	{
			var retVal:String = "";
			if (val.indexOf('\t') > -1)	{
				var i:int = val.indexOf('\t');
				val = val.substr(i+1);
				//retVal = '\t';
			}
			return retVal + resourceManager.getString(RESOURCE_BUNDLE, val);
		}
		
