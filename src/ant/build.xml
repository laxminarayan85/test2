<?xml version="1.0" encoding="UTF-8"?>
<project default="all" name="sourceCompiler">
	<target name="clean">
	</target>

	<property name="pjxnamespace" value="com/efi/printsmith"/>
	<property name="snowmassBuilddir" value="${checkoutpath}/${module2}/WebContent/WEB-INF/classes"/>
	<property name="snowmassBuildlibsdir" value="${checkoutpath}/${module2}/WebContent/WEB-INF/lib"/>

	<property name="snowmassRunTimedir" value="${checkoutpath}/${module2}/PrintSmith Server Runtime"/>
	<!-- Classpath for the project -->   
	<path id="master-classpath"> 
		<fileset dir="${snowmassBuildlibsdir}"> 
			<include name="**/*.jar"/> 
		</fileset>
		<fileset dir="${snowmassRunTimedir}">
			<include name="**/*.jar"/> 
		</fileset> 
	</path> 

   	<target name="all" >
		<echo message="init snowmass java compile"/>
		<!-- . is used for pointing to the current directory -->

		<mkdir dir="${snowmassBuilddir}/${pjxnamespace}/"/>

		<record name="${checkoutpath}/${module2}/src/ant/javac_log.txt" action="start"/> 
 
		<javac srcdir="${checkoutpath}/${module2}/src/${pjxnamespace}" 
			destdir="${snowmassBuilddir}/${pjxnamespace}" 
			debug="${debug}" 
			deprecation="${deprecation}" 
			nowarn="${nowarn}" 
			fork="true"
			verbose="true"
			memoryInitialSize="128m"
			memoryMaximumSize="1024m"> 
			<compilerarg value="-Xlint" />
                	<classpath refid="master-classpath"/> 
		</javac> 
		<record name="${checkoutpath}/${module2}/src/ant/javac_log.txt" action="stop"/> 
	</target>
</project>
